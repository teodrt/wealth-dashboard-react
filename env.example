# Wealth Dashboard v2.52 Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT_MS=10000

# Feature Flags
VITE_ENABLE_TICKER=true
VITE_ENABLE_NEWS=true

# Ticker Configuration
VITE_TICKER_PROVIDER=mock
VITE_TICKER_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,NVDA
VITE_TICKER_REFRESH_INTERVAL_MS=30000

# News Configuration
VITE_NEWS_PROVIDER=mock
VITE_NEWS_MAX_ARTICLES=6
VITE_NEWS_REFRESH_INTERVAL_MS=300000

# API Keys (optional - mock fallback if not provided)
VITE_NEWSAPI_KEY=
VITE_GUARDIAN_KEY=
VITE_POLYGON_KEY=
VITE_FINNHUB_KEY=

# Development
NODE_ENV=development
VITE_DEBUG=true

# Upload Settings
VITE_MAX_FILE_MB=25

# Notes:
# - All VITE_* variables are exposed to the client
# - API keys are optional and will fall back to mock data if not provided
# - Timeouts are in milliseconds
# - File sizes are in MB

